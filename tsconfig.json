{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",
        "moduleDetection": "force",
        "module": "CommonJS",
        "resolveJsonModule": true,
        "allowJs": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.test.ts", "dist"]
}
